{
    "name": "link-fixer",
    "version": "1.0.0",
    "author": "Gio Pavanelli",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/giofolf/fix-x-links.git"
    },
    "main": "index.js",
    "devDependencies": {
        "@types/bun": "^1.2.8",
        "@types/node": "^22.14.0"
    },
    "bugs": {
        "url": "https://github.com/callmeteus/fix-x-links/issues"
    },
    "description": "Bun script to monitor Windows clipboard for x.com URLs and replace them with fixupx.com",
    "keywords": [
        "bun",
        "clipboard",
        "x.com",
        "fixupx.com",
        "fix-x-links",
        "link-fixer",
        "url-fixer",
        "embeddable-links-fixer",
        "embed-links-fixer",
        "embeddable-links-fixer-script",
        "embed-links-fixer-script",
        "embeddable-links-fixer-bun",
        "embed-links-fixer-bun"
    ],
    "license": "MIT",
    "scripts": {
        "test": "bun --watch index.ts",
        "bundle": "bun build index.ts --compile --sourcemap --minify --target=bun-windows-x64-modern --windows-icon=assets\\icon-enabled.ico --windows-hide-console --outfile out/link-fixer"
    },
    "dependencies": {
        "trayicon": "^1.2.2"
    }
}
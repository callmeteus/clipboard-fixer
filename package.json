{
    "name": "clipboard-fixer",
    "version": "1.0.0",
    "author": "Gio Pavanelli",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/callmeteus/clipboard-fixer.git"
    },
    "main": "index.js",
    "devDependencies": {
        "@types/bun": "^1.2.8",
        "@types/node": "^22.14.0"
    },
    "bugs": {
        "url": "https://github.com/callmeteus/clipboard-fixer/issues"
    },
    "description": "An application to monitor the clipboard and make changes to its content based on a set of rules.",
    "keywords": [
        "bun",
        "clipboard",
        "clipboard-monitor",
        "clipboard-fixer",
        "clipboard-fix",
        "clipboard-fixer-script"
    ],
    "license": "MIT",
    "scripts": {
        "test": "bun --watch index.ts",
        "bundle": "bun build index.ts --compile --sourcemap --minify --target=bun-windows-x64-modern --windows-icon=assets\\icon-enabled.ico --windows-hide-console --outfile out/clipboard-fixer"
    },
    "dependencies": {
        "trayicon": "^1.2.2"
    }
}
